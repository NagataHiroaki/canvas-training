{
  "name": "canvas-training",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Nagata Hiroaki",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^9.1.3",
    "browser-sync": "^2.24.7",
    "cpx": "^1.5.0",
    "node-sass": "^4.9.3",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^6.0.0",
    "typescript": "^3.1.2"
  },
  "scripts": {
    "server": "browser-sync start --config bs-config.js",
    "build": "npm-run-all -s copy tsc",
    "watch": "npm-run-all -p w:copy w:tsc server",
    "start": "yarn build && yarn watch",
    "copy": "cpx \"./src/mock/**/*.{js,gif,svg,png,jpg,eot,otf,woff,woff2,html}\" ./dist",
    "w:copy": "cpx \"./src/mock/**/*.{js,gif,svg,png,jpg,eot,otf,woff,woff2,html}\" ./dist -w",
    "tsc": "tsc",
    "w:tsc": "tsc -w"
  }
}
